  <section class="hero">
    <div class="hero-text">
      <h1><%= product.name %></h1>
      <p><%= product.description %></p>
    </div>
    <div class="hero-image">
      <img src="<%= product.image %>" alt="Product Image">
    </div>
  </section>

  <section class="specs-line">
    <% product.specs.forEach(function(spec) { %>
      <div class="spec-item"><%= spec %></div>
    <% }); %>
  </section>

  <section class="highlight-section2">
    <% if (product.highlightImage) { %>
      <div class="highlight-image">
        <img src="<%= product.highlightImage %>" alt="Highlight Image">
      </div>
    <% } %>
    <div class="highlight-text">
      <h2><%= product.featuresTitle || '' %></h2>
      <p>
        <%= product.featuresDesc || '' %>
      </p>
    </div>
  </section>

  <section class="features">
    <% product.details.forEach(function(detail) { %>
      <div class="feature-tile">
        <h3><%= detail.title %></h3>
        <p><%= detail.desc %></p>
      </div>
    <% }); %>
  </section>

